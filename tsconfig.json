{
  "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "es2017", "es2015"],
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "outDir": "dist",
        "sourceMap": true,
        "importHelpers": true,
        "noEmitHelpers": true
  },
  "include": [
    "**/*",
    "test/**/*"
  ],
  "exclude": [
    "playground/**/*"
  ]

}
